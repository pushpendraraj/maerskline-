<% include ../layout/header %>
<div class="fix-left-side left-side-menu">
    <% include ../layout/logo-section %>
    <% include ../layout/left-menu %>
</div>
<% include ../layout/header-right-menu %>
</div>
<div class="content-wrapper">
    <div class="page-name">
        <div class="col-lg-12 col-xs-12">
            <div class="dashboard">Update Profile</div>
        </div>
    </div>
    <div class="sortable">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    Update Profile
                    <span class="tool-bar pull-right">
                        <a href="javascript:;" class="fa fa-external-link"></a>
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                    </span>
                </div>
                <div class="panel-body">
                    <form id="updateProfile" enctype="multipart/form-data" method="POST">
                        <div class="form-group">
                            <label class="control-label" for="FirstName">First Name</label>
                            <input class="form-control input-sm valid validate[required]" id="first_name" name="first_name" data-errormessage-value-missing="First name is required." value="<%=data.first_name%>" placeholder="First Name" type="text">
                            <% if(messages.first_name) { %>
                                <p class="text-danger">
                                    <span class="field-validation-valid"> <%=messages.first_name %></span>
                                </p>
                            <% }%>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="MiddleName">Middle Name</label>
                            <input class="form-control input-sm valid" id="middle_name" name="middle_name" value="<%=data.middle_name%>" placeholder="Middle Name" type="text">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="LastName">Last Name</label>
                            <input class="form-control input-sm valid validate[required]" id="last_name" name="last_name" data-errormessage-value-missing="Last name is required." value="<%=data.last_name%>" placeholder="Last Name" type="text">
                            <% if(messages.last_name) { %>
                                <p class="text-danger">
                                    <span class="field-validation-valid"> <%=messages.last_name %></span>
                                </p>
                            <% }%>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Email">Email</label>
                            <input class="form-control input-sm valid validate[required, custom[email]]" id="Email" name="email" data-errormessage-value-missing="A valid email id is required." value="<%=data.email%>" placeholder="Email" type="text">
                            <% if(messages.email) { %>
                                <p class="text-danger">
                                    <span class="field-validation-valid"> <%=messages.email %></span>
                                </p>
                            <% }%>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Password">Password</label>
                            <input class="form-control input-sm valid" id="password" name="password" value="" placeholder="Password" type="password">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="UserName">Profile Picture</label>
                            <input class="form-control input-sm valid" id="profile_pic" name="profile_pic" type="file">
                        </div>
                        <div class="form-group">
                            <input type="submit" name="Save" class="btn btn-primary pull-right" value="Update">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
<% include ../layout/footer %>