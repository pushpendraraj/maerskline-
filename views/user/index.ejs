<% include ../layout/header %>
<div class="fix-left-side left-side-menu">
    <% include ../layout/logo-section %>
    <% include ../layout/left-menu %>
</div>
<% include ../layout/header-right-menu %>
</div>
<div class="content-wrapper">
    <div class="page-name">
        <div class="col-lg-12 col-xs-12">
            <div class="dashboard">Manage Users</div>
        </div>
    </div>
    <div class="sortable">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    Manage Users
                    <span class="tool-bar pull-right">
                        <a href="javascript:;" class="fa fa-external-link"></a>
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                    </span>
                    <div class="pull-right tool-bar">
                        <button id="add-user-row" class="btn btn-primary pull-right">Add User
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="panel-body">                            
                    <div id="messageBox" tabindex='1' style="display:none;"></div>
                    <table class="table table-striped table-hover table-bordered display dataTable no-footer" id="user-table" role="grid" aria-describedby="editable-table_info">
                        <thead>
                            <tr role="row">    
                                <th>Id</th>
                                <th>#</th>                                   
                                <th class="sorting_asc" tabindex="0" aria-controls="editable-table">First Name</th>
                                <th class="sorting" tabindex="0" aria-controls="editable-table">Middle Name</th>
                                <th class="sorting" tabindex="0" aria-controls="editable-table">Last Name</th>
                                <th class="sorting" tabindex="0" aria-controls="editable-table">Email</th>
                                <th class="sorting" tabindex="0" aria-controls="editable-table">Role</th>
                                <th class="sorting" tabindex="0" aria-controls="editable-table">Status</th>
                            </tr>
                        </thead>
                        <tbody>                                        
                            <%
                                    let i = 1;
                                    userList.forEach(function(userList){
                            %>
                            <tr class="odd" role="row">       
                                <td><%= userList.id %></td> 
                                <td class="sorting_1"><%= i++ %></td>                               
                                <td><%= userList.first_name %></td>
                                <td><%= userList.middle_name %></td>
                                <td><%= userList.last_name %></td>
                                <td><%= userList.email %></td>
                                <td><%= userList.name %></td>
                                <td><%= UserStatus[userList.status] %></td>                                                                  
                            </tr>
                            <% 
                                });
                            %>                                    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../layout/footer %>
<script src="<%=assetsLocation%>/js/user.js"></script>