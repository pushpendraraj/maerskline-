<% include ../layout/header %>
<div id="login" class="col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-1 col-lg-6 col-md-6 col-sm-8 col-xs-10">
    <div id="forgot-panel" class="panel panel-default">
        <div class="panel-body">
            <div class="login-box">
                <div class="row">
                    <div class="col-md-6">
                        <div class="logo">
                            <img src="<%=assetsLocation%>/<%=configuration.imageDir %>/<%=configuration.loginLogo %>" class="img-responsive" alt="Responsive image">
                        </div>
                    </div>
                    <form class="form-signin" id="forgotForm" method="post">
                        <div class="col-md-6 left-border">
                            <% if(messages.successMessage) { %>
                                <div class="alert alert-success" role="alert">
                                    <span type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></span>
                                    <%= messages.successMessage %>
                                </div>
                            <% } %>
                            <% if(messages.errorMessage) { %>
                                <div class="alert alert-danger" role="alert">
                                    <span type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></span>
                                    <%= messages.errorMessage %>
                                </div>
                            <% } %>
                            <div class="left-part">
                                <div class="form-group">
                                    <label class="control-label" for="UserName">Registered Email</label>
                                    <input class="form-control input-sm valid validate[required, custom[email]]" id="Email" name="email" data-errormessage-value-missing="A valid email id is required." value="<%=data.email%>" placeholder="Registered email address" type="text">
                                    <% if(messages.email) { %>
                                        <p class="text-danger">
                                            <span class="field-validation-valid"> <%=messages.email %></span>
                                        </p>
                                    <% }%>
                                </div>
                                <div class="form-group ">
                                    <div class="col-lg-6 padding-left-none">
                                        <p class="text-left">
                                            <a href="/user/login"><i class="fa fa-undo"></i>Back To Login</a>
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <button type="submit" name="LoginButton" class="btn btn-success btn-sm btn-block">
                                            <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Submit </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<p class="text-center clear small text-gray"><%=configuration.copyright %></p>
<% include ../layout/footer %>